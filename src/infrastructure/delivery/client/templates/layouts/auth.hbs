<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Flagus - {{title}}</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css'
    />
    <script src='https://unpkg.com/htmx.org@1.9.10'></script>
    <link rel='stylesheet' href='/assets/styles/styles.css' />
    <link rel='stylesheet' href='/assets/styles/normalize.css' />
  </head>
  <body class='bg-light'>
    <div class='container'>
      <div class='row justify-content-center mt-5'>
        <div class='col-lg-6 col-md-8'>
          <div class='text-center mb-4'>
            <i class='bi bi-flag-fill text-primary' style='font-size: 3rem;'></i>
            <h1 class='mt-2'>Flagus</h1>
            <p class='text-muted'>Feature Flag Management</p>
          </div>

          {{#if flashMessage}}
            <div class='alert alert-{{flashMessage.type}} alert-dismissible fade show' role='alert'>
              {{flashMessage.message}}
              <button
                type='button'
                class='btn-close'
                data-bs-dismiss='alert'
                aria-label='Close'
              ></button>
            </div>
          {{/if}}

          <div class='card shadow-sm'>
            <div class='card-body p-4'>
              {{{body}}}
            </div>
          </div>

          <div class='text-center mt-4'>
            <small class='text-muted'>Flagus v1.0.0 Â© {{currentYear}}</small>
          </div>
        </div>
      </div>
    </div>

    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js'></script>
    <script src='/assets/javascript/main.js'></script>
  </body>
</html>