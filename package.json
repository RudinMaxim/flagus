{
  "name": "bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Maxim Rudin",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "npx nodemon",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\""
  },
  "dependencies": {
    "dotenv": "^16.5.0",
    "fastify": "^5.0.0",
    "inversify": "^7.5.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/node": "^20.17.32",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.44.0",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
