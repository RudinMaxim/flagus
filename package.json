{
  "name": "flagus",
  "version": "1.0.0",
  "description": "A tiny open source service for managing feature flags.",
  "homepage": "https://github.com/RudinMaxim/flagus#readme",
  "main": "dist/index.js",
  "author": "Maxim Rudin",
  "license": "MIT",
  "keywords": [
    "Feature Flags"
  ],
  "bugs": {
    "url": "https://github.com/RudinMaxim/flagus/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RudinMaxim/flagus.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "npx nodemon --watch src --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "seed": "tsc && node dist/seed.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^6.10.2",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@fastify/view": "^8.0.0",
    "dotenv": "^16.5.0",
    "fastify": "^5.0.0",
    "handlebars": "^4.7.8",
    "inversify": "^7.5.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.17.32",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
